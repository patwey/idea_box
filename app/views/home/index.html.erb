<div class="container">

  <div class="text-center row">
    <div class="col-md-4 col-md-offset-1">
      <h1>Add an Idea</h1>
    </div>

    <div class="col-md-6 col-md-offset-1">
      <h1>Idea Box</h1>
    </div>
  </div>

  <!-- Ideas -->
  <div class="row">
    <div class="well col-md-4 col-md-offset-1">
      <form>
        <div class="form-group">
          <label for="new-idea-title">Title</label>
          <input type="text" class="form-control" id="new-idea-title">
        </div>

        <div class="form-group">
          <label for="new-idea-body">Body</label>
          <input type="text" class="form-control" id="new-idea-body">
        </div>

        <button type="submit" class="btn btn-default" id="save-idea">Save</button>
      </form>
    </div>

    <div class="col-md-6 col-md-offset-1" id="ideas">
    </div>
  </div>
</div>
